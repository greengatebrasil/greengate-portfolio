# =============================================================================
# GreenGate - Variáveis de Ambiente (EXEMPLO)
# =============================================================================
# INSTRUÇÕES:
# 1. Copie este arquivo para .env: cp .env.example .env
# 2. Substitua os valores de exemplo por valores reais
# 3. NUNCA commite o arquivo .env!

# =============================================================================
# App
# =============================================================================
APP_NAME=GreenGate Geo-Compliance
APP_VERSION=1.0.0
DEBUG=false

# =============================================================================
# CORS
# =============================================================================
# Desenvolvimento: "*"
# Produção: "https://seudominio.com.br"
ALLOWED_ORIGINS=*

# =============================================================================
# Auth
# =============================================================================
# Gere com: openssl rand -hex 32
SECRET_KEY=your-secret-key-here

# Admin credentials
# Gere hash com: python -c "import bcrypt; print(bcrypt.hashpw(b'sua_senha', bcrypt.gensalt()).decode())"
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your-bcrypt-hash-here
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# Database
# =============================================================================
# Formato: postgresql+asyncpg://user:pass@host:port/dbname
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/greengate

# Pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=10
DB_POOL_RECYCLE=1800

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_AUTHENTICATED=100
RATE_LIMIT_ANONYMOUS=20

# =============================================================================
# Validation Rules
# =============================================================================
EUDR_CUTOFF_DATE=2020-12-31
VALIDATION_EXPIRY_DAYS=90
